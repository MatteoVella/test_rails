<h1>Database persone scomparse</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Email</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informazionis.each do |informazioni| %>
      <tr>
        <td><%= informazioni.nome %></td>
