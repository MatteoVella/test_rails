        <td><%= informazioni.email %></td>
        <td><%= informazioni.telefono %></td>
        <td><%= link_to 'Show', informazioni %></td>
        <td><%= link_to 'Edit', edit_informazioni_path(informazioni) %></td>
        <td><%= link_to 'Destroy', informazioni, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

